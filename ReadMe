#include <iostream>
//Библиотека. Их бывает много. В каждой из них встроенны команды.
using namespace std;
//Чтобы не писать std::cout, а просто cout и др.


//Место для написания функций - классов и др.


int main()
{
    int IntNum; //Переменная, которая хранит числа. Пример: 223, 1, 333.
    double DoubleNum; //Переменная, которая хранит числа с точкой. Пример: 2.3, 3.4.
    string StringText; //Переменная, которая хранит текст.
    int TestPage; 

    //Присваиваем переменным значения.
    IntNum = 4;
    DoubleNum = 2.3;
    StringText = "Test, Text"; 
    TestPage = 3;
    
    //Базовые комманды. Команда cout для показа текста. Endl обрывает текст, переходя на новую строку.
    cout << "Hello" << endl; //Пишет текст который мы записали в "".
    cout << IntNum << endl; //Пишет переменную, которую мы записали.
    cout << "Hello" << " " << IntNum << " " << DoubleNum << " " << StringText << endl; //Можно делать сколько хочешь.

    //Базовые комманды. Команда cin записи текста в переменную. 

    //Tеперь мы изменили значение переменной, так что выводим ее на экран. Заметьте, что первоночальное значение было 3.
    cout << TestPage;
}
